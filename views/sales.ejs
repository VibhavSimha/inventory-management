<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Management | StackIT</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>StackIT</h3>
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/dashboard">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <!-- <li>
                    <a href="/user-management">
                        <i class="fas fa-users"></i> User Management
                    </a>
                </li> -->
                <li>
                    <a href="/categories">
                        <i class="fas fa-th-list"></i> Categories
                    </a>
                </li>
                <li>
                    <a href="/products">
                        <i class="fas fa-cogs"></i> Products
                    </a>
                </li>
                <li>
                    <a href="/sales">
                        <i class="fas fa-chart-line"></i> Sales
                    </a>
                </li>
                <li>
                    <a target="_blank" href="http://localhost:8501/">
                        <i class="fas fa-file-invoice"></i> Sales Report
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="content">
            <button type="button" id="sidebarCollapse" class="btn mb-3">
                <i class="fas fa-bars"></i>
                <span class="ml-2">Toggle Sidebar</span>
            </button>

            <h1 class="mb-4">Sales Management</h1>

            <!-- Display any errors if present -->
            <% if (error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>

                    <div class="row">
                        <div class="col-md-6">
                            <!-- Add to Cart Section -->
                            <div class="card">
                                <div class="card-header">
                                    <h2 class="mb-0">Add to Cart</h2>
                                </div>
                                <div class="card-body">
                                    <form action="/sales/search-sellers" method="POST">
                                        <div class="form-group">
                                            <label for="product">Product:</label>
                                            <select name="product" id="product" class="form-control"
                                                onchange="updateSellingPrice()">
                                                <% products.forEach(product=> { %>
                                                    <option value="<%= product.name %>"
                                                        >
                                                        <%= product.name %> (Qty Available: <%=selfQuantity[product.name] || 0 %>)
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Search</button>
                                    </form>
                                    <form action="/sales/add-to-cart" method="POST">
                                        <div class="form-group">
                                            <% if (sellers && sellers.length> 0) { %>
                                                <label for="sellers">Sellers:</label>
                                                <table class="table table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Seller ID</th>
                                                            <th>Seller Name</th>
                                                            <th>Selling Price</th>
                                                            <th>Quantity</th>
                                                            <th>Select</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% sellers.forEach(seller=> { %>
                                                            <tr>
                                                                <td>
                                                                    <label for="sellerid"></label>
                                                                    <%= seller.id %>
                                                                </td>
                                                                <td>
                                                                    <label for="sellername"></label>
                                                                    <%= seller.seller_name %>
                                                                </td>
                                                                <td>
                                                                    <label for="sellingprice"></label>
                                                                    <%= seller.selling_price %>
                                                                </td>
                                                                <td>
                                                                    <label for="quantitysold"></label>
                                                                    <%= seller.quantity %>
                                                                </td>
                                                                <td>
                                                                    <input type="radio" name="seller_id" id="sellers" value="<%= seller.id %>" required>
                                                                    <input type="hidden" name="seller_product" value="<%= seller.seller_product %>">
                                                                </td>
                                                            </tr>
                                                            <%})%>
                                                    </tbody>
                                                </table>
                                                

                                        </div>

                                        <div class="form-group">
                                            <label for="quantity">Quantity:</label>
                                            <input type="number" name="quantity" id="quantity" class="form-control"
                                                min="1" required>
                                        </div>

                                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                                        <% } else { %>
                                            <p>No Sellers.</p>
                                            <% } %>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <!-- Cart Section -->
                            <div class="card">
                                <div class="card-header">
                                    <h2 class="mb-0">Your Cart</h2>
                                </div>
                                <div class="card-body">
                                    <% if (cart && cart.length> 0) { %>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Product Name</th>
                                                        <th>Quantity</th>
                                                        <th>Seller ID</th>
                                                        <th>Price</th>
                                                        <th>Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% let totalCartPrice=0; %>
                                                        <% cart.forEach(item=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= item.product_name %>
                                                                </td>
                                                                <td>
                                                                    <%= item.quantity %>
                                                                </td>
                                                                <td>
                                                                    <%= item.seller_id %>
                                                                </td>
                                                                <td>$<%= parseFloat(item.selling_price).toFixed(2) %>
                                                                </td>
                                                                <td>$<%= parseFloat(item.total_price).toFixed(2) %>
                                                                </td>
                                                            </tr>
                                                            <% totalCartPrice +=parseFloat(item.total_price); %>
                                                                <% }) %>
                                                                    <tr>
                                                                        <td colspan="4"><strong>Total</strong></td>
                                                                        <td><strong>$<%= totalCartPrice.toFixed(2) %>
                                                                            </strong></td>
                                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <form action="/sales/checkout" method="POST" class="mt-3">
                                            <div class="form-group">
                                                <label for="payment_method">Payment Method:</label>
                                                <select name="payment_method" id="payment_method" class="form-control">
                                                    <option value="Cash">Cash</option>
                                                    <option value="Card">Card</option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>

                                            <button type="submit" class="btn btn-success">Checkout</button>
                                        </form>
                                        
                                        <% } else { %>
                                            <p>Your cart is empty.</p>
                                            <% } %>
                                </div>
                            </div>
                            <% if (error) { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= error %>
                                </div>
                                <script>
                                    alert("<%= error %>");
                                </script>
                            <% } %>
                        </div>
                    </div>

                    <!-- Sales History Section -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h2 class="mb-0">Top 5 Latest Sales</h2>
                        </div>
                        <div class="card-body">
                            <% if (sales && sales.length> 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Product Name</th>
                                                <th>Quantity</th>
                                                <th>Total Price</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% sales.forEach(sale=> { %>
                                                <tr>
                                                    <td>
                                                        <%= sale.product_name %>
                                                    </td>
                                                    <td>
                                                        <%= sale.quantity %>
                                                    </td>
                                                    <td>$<%= parseFloat(sale.total_price).toFixed(2) %>
                                                    </td>
                                                    <td>
                                                        <%= sale.date %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <p>No sales history available.</p>
                                    <% } %>
                        </div>
                    </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, .content').toggleClass('active');
            });
        });

        function updateSellingPrice() {
            const select = document.getElementById('product');
            const selectedOption = select.options[select.selectedIndex];
            const sellingPrice = selectedOption.getAttribute('data-selling-price');
            console.log('Selected product selling price:', sellingPrice);
        }
    </script>
</body>

</html>