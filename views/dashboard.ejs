<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | StackIT</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/dashboard.css">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>StackIT</h3>
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/dashboard">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="/user-management">
                        <i class="fas fa-users"></i> User Management
                    </a>
                </li>
                <li>
                    <a href="/categories">
                        <i class="fas fa-th-list"></i> Categories
                    </a>
                </li>
                <li>
                    <a href="/products">
                        <i class="fas fa-cogs"></i> Products
                    </a>
                </li>
                <li>
                    <a href="/sales">
                        <i class="fas fa-chart-line"></i> Sales
                    </a>
                </li>
                <li>
                    <a target="_blank" href="http://localhost:8501">
                        <i class="fas fa-file-invoice"></i> Sales Report
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Toggle Sidebar</span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Welcome, <%= user.username %></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Dashboard Summary -->
            <div class="container-fluid">
                <h2 class="mb-4">Dashboard</h2>
                <div class="row">
                    <!-- Total Sales -->
                    <div class="col-md-3">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Sales</h5>
                                <p class="card-text">₹<%= parseFloat(totalSales).toFixed(2) %></p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Number of Sales -->
                    <div class="col-md-3">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Number of Sales</h5>
                                <p class="card-text"><%= numberOfSales %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Total Products Sold -->
                    <div class="col-md-3">
                        <div class="card text-white bg-warning mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Products Sold</h5>
                                <p class="card-text"><%= totalProductsSold %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Total Revenue -->
                    <div class="col-md-3">
                        <div class="card text-white bg-info mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Revenue</h5>
                                <p class="card-text">₹<%= parseFloat(totalRevenue).toFixed(2) %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Products Nearing Expiry -->
<div class="mt-5">
    <h4>Products Nearing Expiry</h4>
    <div class="row">
        <div class="col-md-6">
            <% if (expiryProducts.length > 0) { %>
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product Name</th>
                            <th>Expiry Date</th>
                            <th>Quantity</th>
                            <th>Days to Expiry</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% expiryProducts.forEach(product => { %>
                            <tr>
                                <td><%= product.name %></td>
                                <td><%= product.expiryDate.toISOString().slice(0, 10) %></td>
                                <td><%= product.quantity %></td>
                                <td>
                                    <% if (product.daysToExpiry >= 0) { %>
                                        <%= product.daysToExpiry %> days
                                    <% } else { %>
                                        Expired
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p class="text-muted">No products are nearing expiry within the next 7 days.</p>
            <% } %>
        </div>
    </div>
</div>

            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>
</html>
